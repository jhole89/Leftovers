<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/tableLayout1"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal"
  android:weightSum="2"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="com.jhole89.leftovers.MainActivity"
  tools:showIn="@layout/app_bar_main" >

  <Button
    android:id="@+id/launchSearchIngredient"
    android:layout_width="0dp"
    android:layout_height="@dimen/main_activity_button_height"
    android:layout_weight="1"
    android:text="@string/main_activity_search_ingredient_label"
    android:textAlignment="center"
    android:textColor="@android:color/black" />

  <Button
    android:id="@+id/launchSearchRecipe"
    android:layout_width="0dp"
    android:layout_height="@dimen/main_activity_button_height"
    android:layout_weight="1"
    android:text="@string/main_activity_search_recipe_label"
    android:textAlignment="center"
    android:textColor="@android:color/black" />

</LinearLayout>
